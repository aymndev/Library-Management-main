generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
}

model User {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  password  String
  role      String   @default("user")
  status    String   @default("approved")
  createdAt DateTime @default(now())
}

model Book {
  id       Int    @id @default(autoincrement())
  title    String
  author   String
  quantity Int
}
